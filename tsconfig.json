{
	"compilerOptions": {
		"lib": [
			"ESNext",
		],
		"declaration": true,
		"outDir": "dist",
		"removeComments": true,
		"target": "ESNext",
		"baseUrl": "./",
		"esModuleInterop": true, 
		"moduleResolution": "Node",
		"paths": {},
		"sourceMap": true, 
		"sourceRoot": "/", 
		"alwaysStrict": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules/**/*"
	]
}