{
	"compilerOptions": {
		"lib": [
			"ESNext",
		],
		"declaration": true,
		"outDir": "dist",
		"removeComments": true,
		"target": "ES6",
		"baseUrl": "./",
		"esModuleInterop": true, 
		"moduleResolution": "node",
		"paths": {},
		"sourceMap": true, 
		"sourceRoot": "/", 
		"alwaysStrict": true,
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules/**/*"
	]
}